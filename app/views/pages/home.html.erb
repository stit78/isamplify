      </div>

      <br>
      <div class="home-monitor-sample">
        <h3>Current activity</h3>
        <ul>
          <li><strong>Number of samples under management:</strong> <%= @samples.count %></li>
          <li><strong>Number of coffee lots under management:</strong> <%= @coffee_lot.count %></li>
          <li><strong>Number of coffee lots under management:</strong> <%= @coffee_lot.count %></li>
          <li><strong>Quantity of coffee under management:</strong> <%= @quantity.sum %> bags</li>
        </ul>
      </div>

      <div class="coffee-news">
        <h3>Coffee news</h3>
        <%= image_tag "coffee.news.png" %>
      </div>

