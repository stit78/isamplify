<%= render 'shared/navbar2' %>
<div class="wrapper">
  <div class="container">

      <div class="header-pending-show">
        <div class="text-header-pending">
          <h2 class="text-center">Samples emailing</h2>
        </div>
      </div>

      <% if @samples.count == 0 %>
        <p>No samples waiting for emailing</p>
      <% else %>
          <% @samples.each do |sample| %>
            <div class="card-removable">
              <%= render "shared/card_sample", sample: sample %>
            </div>
          <% end %>
      <% end %>
  </div>
</div>
