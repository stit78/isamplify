<%= render 'shared/navbar2' %>
<div class="wrapper">
  <div class="container">

      <div class="header-pending-show">
        <div class="text-header-pending">
          <h2 class="text-center">Samples emailing</h2>
        </div>
      </div>

      <% if @samples.count == 0 %>
        <p>No samples waiting for emailing</p>
      <% else %>
          <% @samples.each do |sample| %>
              <%= render "shared/card_sample", sample: sample %>

          <!-- modal to add potential client -->
          <div class="modal fade" id="client-sample-<%= sample.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" style="width: 30%" role="document">
              <div class="modal-content modal-color">
                <div class="modal-header">
                  <button type="button" class="close" id="modal-close-sample-#{sample.id}" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title">Cupping Results</h4>
                  <h5><%= sample.coffee_lot.provenance %>, <%= sample.coffee_lot.quality_description %>, <%= sample.coffee_lot.quantity %> bags</h5>
                </div>
                <div class="modal-body">
                  <%= simple_form_for @potential_client, url: update_after_labelling_sample_path(sample), method: :post, remote:true do |f| %>
                    <%= f.fields_for :potential_clients, @potential_client*4 do |potential_client| %>
                      <%= potential_client.association :client, collection: @clients, label_method: :company_name, value_method: :id %>
                    <% end %>
                    <br>
                    <%= f.submit "Save new potential_clients", class: "add_coffee_btn modal_save" %>
                    <br>
                    <br>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <% end %>
      <% end %>
  </div>
</div>
