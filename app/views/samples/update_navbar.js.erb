<% if @after_reception %>
  function gracefullyHide(id){
    const sampleCard = document.getElementById(`sample-${id}`)
    sampleCard.classList.add("removed-item")
    setTimeout(() => { sampleCard.classList.add("hide"); }, 1000);
  }

  gracefullyHide(<%= @sample.id %>)
<% end %>

