<div class="card-box">
  <div class="card-main">

    <div class="card-top">
      <div class="card-title">
        <div style="display: flex; align-content: center;">
          <strong style="color: $main">SAMPLE NÂ°</strong><%= sample.id %>, &nbsp;<strong style="color: $main">FROM</strong> &nbsp; <%= sample.coffee_lot.provenance %>, &nbsp;<strong style="color: $main">QUALITY</strong> &nbsp;<%= sample.coffee_lot.quality_description %> &nbsp; <strong style="color: $main">SENT BY</strong>&nbsp; <%= sample.exporter.company_name %></strong>
        </div>
      </div>
      <div class=card-status> <%= sample.status %>&nbsp;</div>
      <div class="card-score">
        <% if sample.status != "pending" || "received" %>
        <% sum = sample.sweetness.to_i + sample.acidity.to_i + sample.clean.to_i %>
        <span style="font-size: 20px;"><%= sum %></span><span>/30</span>
        <% else %>
        <% end %>
      </div>
    </div>

    <div class="card-content">

      <div class="card-import">

        <% if sample.stage == "Offer Sample" %>
          <div class="card-stage active current">
            Offer
          </div>
          <div class="card-stage">
            Purchase
          </div>
          <div class="card-stage">
            Loading
          </div>
          <div class="card-stage">
            Port
          </div>
          <div class="card-stage">
            Warehouse
          </div>
          <div class="card-stage">
            Client
          </div>

        <% elsif sample.stage == "Purchase Sample" %>
          <div class="card-stage active">
            Offer
          </div>
          <div class="card-stage active current">
            Purchase
          </div>
          <div class="card-stage">
            Loading
          </div>
          <div class="card-stage">
            Port
          </div>
          <div class="card-stage">
            Warehouse
          </div>
          <div class="card-stage">
            Client
          </div>

        <% elsif sample.stage == "Loading Sample" %>
          <div class="card-stage active">
            Offer
          </div>
          <div class="card-stage active">
            Purchase
          </div>
          <div class="card-stage active current">
            Loading
          </div>
          <div class="card-stage">
            Port
          </div>
          <div class="card-stage">
            Warehouse
          </div>
          <div class="card-stage">
            Client
          </div>

        <% elsif sample.stage == "Port Sample" %>
          <div class="card-stage active">
            Offer
          </div>
          <div class="card-stage active">
            Purchase
          </div>
          <div class="card-stage active">
            Loading
          </div>
          <div class="card-stage active current">
            Port
          </div>
          <div class="card-stage">
            Warehouse
          </div>
          <div class="card-stage">
            Client
          </div>

        <% elsif sample.stage == "Warehouse Sample" %>
          <div class="card-stage active">
            Offer
          </div>
          <div class="card-stage active">
            Purchase
          </div>
          <div class="card-stage active">
            Loading
          </div>
          <div class="card-stage active">
            Port
          </div>
          <div class="card-stage active current">
            Warehouse
          </div>
          <div class="card-stage">
            Client
          </div>

        <% elsif sample.stage == "Client Sample" %>
          <div class="card-stage active">
            Offer
          </div>
          <div class="card-stage active">
            Purchase
          </div>
          <div class="card-stage active">
            Loading
          </div>
          <div class="card-stage active">
            Port
          </div>
          <div class="card-stage active">
            Warehouse
          </div>
          <div class="card-stage active current">
            Client
          </div>

        <% end %>
      </div>



      <div class="card-description-action">
        <div class="card-description">

          <div class="card-field">
            <div class="card-key">
              <p><strong>Quantity:</strong></p>
            </div>
            <div class="card-value">
              <p><%= sample.coffee_lot.quantity %> bags</p>
            </div>
          </div>

          <div class="card-field">
            <div class="card-key">
              <p><strong>Region:</strong></p>
            </div>
            <div class="card-value">
              <p><%= sample.coffee_lot.region %></p>
            </div>
          </div>

          <div class="card-field">
            <div class="card-key">
              <p><strong>Potential clients:</strong></p>
            </div>
            <div class="card-value">
              <% count = 1 %>
              <% sample.coffee_lot.potential_clients.each do |potential_client| %>
                <% if count == 1 %>
                  <span><%= potential_client.client.company_name %></span>
                <% else %>
                  <span>, <%= potential_client.client.company_name %></span>
                <% end %>
                <% count += 1 %>
              <% end %>
            </div>
          </div>

        </div>
          <div class="card-action">
            <div class="show"><i class="far fa-eye"></i></div>
            <div class="edit"><i class="fas fa-edit"></i></div>
          </div>


        </div>

      </div>

    </div>

  </div>


  <div class="card-expendable">
    <p>More info will be displayed here using AJAX</p>
  </div>

</div>


